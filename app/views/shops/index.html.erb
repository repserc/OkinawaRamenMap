<h1>店名一覧</h1>

<table>
  <thead>
    <tr>
      <th>店名</th>
      <th>よみがな</th>
      <th>カテゴリ</th>
      <th>住所</th>
      <th>電話番号</th>
      <th>タグ</th>
      <th>駐車場</th>
      <th>配達</th>
      <th>営業時間</th>
      <th>休日</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.name %></td>
        <td><%= shop.kana %></td>
        <td><%= shop.category %></td>
        <td><%= shop.address %></td>
        <td><%= shop.phone %></td>
        <td><%= shop.tag %></td>
        <td><%= shop.gps %></td>
        <td><%= shop.delivary %></td>
        <td><%= shop.hour %></td>
        <td><%= shop.holiday %></td>
        <td><%= link_to '詳細', shop %>　</td>
        <td><%= link_to '編集', edit_shop_path(shop) %>　</td>
        <td><%= link_to '削除', shop, method: :delete, data: { confirm: 'Are you sure?' } %>　</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

